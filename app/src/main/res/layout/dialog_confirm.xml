<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="392dp"
                android:layout_height="192dp"
                android:background="@drawable/shape_form_control">

    <TextView
        android:id="@+id/confirm_dlg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="DIALOG TITLE"
        android:textSize="18dp"
        android:textColor="@color/dialogHeaderText"
        android:background="@color/dialogHeader"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/confirm_dlg_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/confirm_dlg_title"
        android:layout_above="@+id/confirm_dlg_footer"
        android:padding="8dp"
        android:text="DADANG"
        android:textSize="14sp"
        android:textColor="@color/dialogContentText"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/confirm_dlg_footer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/confirm_dlg_no_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dialog_button_no"
            android:textSize="16sp"
            android:textColor="@color/dialogButtonText"
            android:gravity="center"
            android:background="@drawable/selector_button_no_corner"/>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/formControlColor"/>

        <TextView
            android:id="@+id/confirm_dlg_yes_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dialog_button_yes"
            android:textSize="16sp"
            android:textColor="@color/dialogButtonText"
            android:gravity="center"
            android:background="@drawable/selector_button_no_corner"/>

    </LinearLayout>

</RelativeLayout>
