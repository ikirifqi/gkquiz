<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context="com.nextinnovation.gkquiz.activities.QuestionActivity">

    <TextView
        android:id="@+id/question_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="CATEGORY"
        android:textSize="24sp"
        android:textColor="@color/questionCategory"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/question_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/question_answers"
        android:layout_below="@+id/question_category"
        android:gravity="center"
        android:padding="18dp"
        android:text="Siapa Dadang itu?"
        android:textSize="22sp"
        android:textColor="@color/questionText"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/question_answers"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="22dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/question_loader"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>
